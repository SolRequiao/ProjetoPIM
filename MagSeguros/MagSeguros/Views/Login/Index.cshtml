@model LoginModel
@{
    Layout = "_LayoutDesLogin";
    ViewData["Title"] = "Login";
}

@if (TempData["MenssagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MenssagemErro"]
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
    </div>
}

<form asp-controller="Login" asp-action="Entrar" class="w-100 h-100 d-flex justify-content-around align-items-end flex-wrap mt-5" method="post">
    <div class="w-40 d-flex flex-column align-items-center mt-lg-3 border border-primary rounded px-5 pb-lg-5">
        <img width="300" src="~/assets/logo-mag.png" />
        <div class="mb-3 w-100">
            <label for="nome" class="form-label ">Nome:</label>
            <input type="text" required asp-for="Login" class="form-control w-100 " placeholder="Digite seu nome..." onfocus="true">
            @Html.ValidationMessageFor(login => login.Login)
        </div>
        <div class="mb-3 w-100">
            <label for="nome" class="form-label">Senha:</label>
            <input type="password" required asp-for="Senha" class="form-control w-100" placeholder="**********">
            @Html.ValidationMessageFor(senha => senha.Senha)
        </div>
        <button type="submit" class="mt-3 btn btn-primary w-100 text-center">Entrar</button>
    </div>
    <div class="w-60 mt-4">
        <img width="500" src="~/assets/login-animate.svg" />
    </div>
</form>