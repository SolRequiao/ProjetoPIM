@model LoginModel
@{
    Layout = "_LayoutDesLogin";
    ViewData["Title"] = "Login";
}

@if (TempData["MenssagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["MenssagemErro"]
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
    </div>
}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <div class="mb-3">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Login" class="form-control">
        @Html.ValidationMessageFor(login => login.Login)
    </div>
    <div class="mb-3">
        <label for="nome" class="form-label">Senha</label>
        <input type="password" asp-for="Senha" class="form-control">
        @Html.ValidationMessageFor(senha => senha.Senha)
    </div>
    <button type="submit" class="btn btn-primary btn-block">Submit</button>
</form>